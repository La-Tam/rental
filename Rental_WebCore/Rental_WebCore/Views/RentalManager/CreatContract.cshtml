
@{
    ViewData["Title"] = "CreatContract";
}

<head>
    <link href="~/CSS_Rental/css/main.css" rel="stylesheet" />

</head>
<body>
    <main class="app-content">
        @*  *@
        <div class="col-12">
            <div class="alert alert-warning" style="background-color:#009688;">
                <div class="row">
                    <h4 style="margin-bottom:0px; text-align:left;color:aliceblue">TẠO HỢP ĐỒNG</h4>
                    <button style="margin-left:820px" type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">
                            <img src="~/images/Rental/Contract/icons8-delete-60.png" style="width:25px" />
                        </span>
                    </button>
                </div>
            </div>
        </div>
        @* From thông tin *@
        <div class="col-12">
            <div class="tile" style="margin-top:-17px">
                <div class="row">
                    @* VT *@
                    <div class="col-md-6">
                        <div class="tile">
                            <h3 class="tile-title">Thông tin hợp đồng</h3>
                            <hr />
                            <div class="tile-body">
                                <form class="form-horizontal">
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Mã hợp đồng</label>
                                        <div class="col-md-8">
                                            <input class="text-body " type="text" value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Ngày tạo hợp đồng</label>
                                        <div class="col-md-8">
                                            <input class="text-body  " type="text" value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Ngày hiệu lực</label>
                                        <div class="col-md-8">
                                            <input class="text-body  " type="text" value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Đến ngày</label>
                                        <div class="col-md-8">
                                            <input class="text-body  " type="text" value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Dự án</label>
                                        <div class="col-md-8">
                                            <input class="text-body col-md-12 " type="text" disabled="" value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Tòa nhà</label>
                                        <div class="col-md-8">
                                            <input class="text-body col-md-12 " type="text" disabled="" value="Vina-phone">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Tầng</label>
                                        <div class="col-md-8">
                                            <input class="text-body col-md-12 " type="text" disabled="" value="Tầng 2">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Phòng</label>
                                        <div class="col-md-8">
                                            <input class="text-body col-md-12 " type="text" disabled="" value="P.123">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Loại sản phẩm</label>
                                        <div class="col-md-8">
                                            <input class="text-body col-md-12 " type="text" disabled="" value="2 phòng ngủ">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Giá</label>
                                        <div class="col-md-8">
                                            <input class="text-body col-md-12 " type="text"  value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Tiền cọc</label>
                                        <div class="col-md-8">
                                            <input class="text-body col-md-12 " type="text" value="">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="control-label col-md-3">Ghi chú</label>
                                        <div class="col-md-9">
                                            <textarea class="text-body" rows="4" placeholder="Note" style="width:323px"></textarea>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                    @*VP *@
                    <div class="col-md-6">
                        <div class="tile">
                            <h3 class="tile-title">Thông tin khách thuê</h3>
                            <hr />
                            <div class="tile-body">
                                <form class="form-horizontal">
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Tên khách thuê</label>
                                        <div class="col-md-8">
                                            <input class="text-body col-md-12 " type="text" value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Điện thoại</label>
                                        <div class="col-md-8">
                                            <input class="text-body col-md-12 " type="text" value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">CMND</label>
                                        <div class="col-md-8">
                                            <input class="text-body col-md-12 " type="text" value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-4">Email</label>
                                        <div class="col-md-8">
                                            <input class="text-body col-md-12 " type="text" value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-3">Ghi chú</label>
                                        <div class="col-md-9">
                                            <textarea class="text-body" rows="4" placeholder="Note" style="width:323px"></textarea>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="tile">
                            <div class="row">
                                <h3 class="tile-title">Đăng ký dịch vụ</h3>
                                <button class="btn-outline-primary" style="margin-left:150px;border-color:darkgray;border:solid 1px ;height:30px">
                                    <span>
                                        <img src="~/images/Rental/Contract/icons8-add-new-filled-50.png" style="width:25px" />
                                        <samp>Thêm dịch vụ</samp>
                                    </span>
                                </button>
                            </div>
                            <hr style="margin-top:-0px" />
                            <div style="  height:181px; border:1px solid black; padding:20px; overflow:auto;border-color:darkgray">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width:25px"><img src="~/images/Rental/Contract/icons8-checkmark-filled-50.png" style="width:20px" /></th>
                                            <th class="col-md-2"style="text-align:center">Loại dịch vụ</th>
                                            <th style="text-align:center;width:15px">Số lượng</th>
                                            <th>Đơn giá</th>
                                            <th>Đơn vị</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><input class="checkbox" type="checkbox" /></td>
                                            <td>
                                                <input class="text-body  " style="width:70px" type="text" value="Internet  ">
                                            </td>
                                            <td><input class="text-center " type="text" style="width:25px" value="1" /></td>
                                            <td><input class="text-dark " style="width:80px" type="text" value="" /></td>
                                            <td>
                                                <input class="text-body  " style="width:80px" disabled="" type="text" value="Đồng/Tháng ">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><input class="checkbox" type="checkbox" /></td>
                                            <td>
                                                <input class="text-body " style="width:70px" type="text" value="Cáp  ">
                                            </td>
                                            <td><input class="text-center " type="text" style="width:25px" value="1" /></td>
                                            <td><input class="text-dark " style="width:80px" type="text" value="" /></td>
                                            <td>
                                                <input class="text-body  " style="width:80px" disabled="" type="text" value="Đồng/Tháng ">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><input class="checkbox" type="checkbox" /></td>
                                            <td>
                                                <input class="text-body  " style="width:70px" type="text" value="Đổ rác  ">
                                            </td>
                                            <td><input class="text-center " style="width:25px" type="text" value="1" /></td>
                                            <td><input class="text-dark " style="width:80px" type="text" value="" /></td>
                                            <td>
                                                <input class="text-body  " style="width:80px" disabled="" type="text" value="Đồng/Tháng ">
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>


                        </div>
                    </div>

                </div>
                <hr style="margin-top:-10px"/>
                <div class="row">
                    <button class="btn-outline-success" style="margin-left:20px;width:70px;border:1px solid"><i><img src="~/images/Rental/Contract/icons8-save-30.png" style="width:20px;margin-top:-6px"/></i> Lưu</button>
                    <button class="btn-outline-danger" style="margin-left:30px;width:70px;border:1px solid"><i><img src="~/images/Rental/Contract/icons8-file-delete-30.png"style="width:20px;margin-top:-6px" /></i>  Hủy</button>
                </div>

            </div>
            
        </div>
    </main>
</body>

